<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="0.5dp" android:color="@color/mine_item_divide" />
            <gradient android:angle="270.0" android:endColor="@color/item_click_bg2" android:startColor="@color/item_click_bg2" />
        </shape>
     </item>
     
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="0.5dp" android:color="@color/mine_item_divide" />
            <gradient android:angle="270.0" android:endColor="@color/item_click_bg2" android:startColor="@color/item_click_bg2" />
        </shape>
    </item>
    
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="0.5dp" android:color="@color/mine_item_divide" />
            <gradient android:angle="270.0" android:endColor="@color/mine_item_bg_n" android:startColor="@color/mine_item_bg_n" />
        </shape>
    </item>

</selector>