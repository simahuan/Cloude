<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:drawable="@drawable/main_regist_normal" android:state_pressed="false"/>
    <item android:drawable="@drawable/main_regist_pressed" android:state_pressed="true"/>

    <item ><shape>

            <!-- 实心，即填充 -->
            <solid android:color="#00BFFF" />
            <!-- 描边 -->
            <stroke android:width="1dp" android:color="#838B8B" />
            <!-- 圆角 -->
            <corners android:radius="5dp" />

            <padding android:bottom="10dp" android:left="60dp" android:right="60dp" android:top="10dp" />
        </shape></item>

</selector>