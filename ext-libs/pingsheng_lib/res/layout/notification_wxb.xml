<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/guest_icon"
        android:layout_width="@dimen/notify_height"
        android:layout_height="@dimen/notify_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:src="@drawable/logo1" />
    
	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/notify_height"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_wxb_name"
            style="@style/NotificationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="追剧神器"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_wxb_start"
            style="@style/NotificationContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:text="点击进入"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/ll_wxb_guest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_wxb_guest"
            android:layout_width="@dimen/notify_set_wxb_drawable"
            android:layout_height="@dimen/notify_set_wxb_drawable"
            android:src="@drawable/notify_guest_close"
            />

        <TextView
            android:id="@+id/tv_wxb_guest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:textColor="@color/gray_ss"
            android:text="共享"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/ll_wxb_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_wxb_battery"
            android:layout_width="@dimen/notify_set_wxb_drawable"
            android:layout_height="@dimen/notify_set_wxb_drawable"
            android:src="@drawable/notify_battery_close"
            />

        <TextView
            android:id="@+id/tv_wxb_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:textColor="@color/gray_ss"
            android:text="100%电量"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/ll_wxb_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_wxb_storage"
            android:layout_width="@dimen/notify_set_wxb_drawable"
            android:layout_height="@dimen/notify_set_wxb_drawable"
            android:src="@drawable/notify_storage_close"
            />

        <TextView
            android:id="@+id/tv_wxb_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:textColor="@color/gray_ss"
            android:text="39%可用"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
