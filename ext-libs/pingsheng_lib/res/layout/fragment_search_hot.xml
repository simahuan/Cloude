<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dominant_background2"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="5dp"
        android:gravity="bottom"
        android:text="热搜榜"
        android:textColor="@color/divide_color"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide_color" />

    <TextView
        android:id="@+id/empty_tv"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:visibility="gone"
        android:gravity="center"
        android:text="暂无热门剧集"
        android:textColor="@color/divide_color_black" />

    <ListView
        android:id="@+id/search_hot_lv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="@android:color/transparent"
        android:listSelector="@drawable/selector_lv_item_click_bg"
        android:divider="@color/divide_color"
        android:dividerHeight="1dp"
        android:scrollbarFadeDuration="0" >
    </ListView>

</LinearLayout>