<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/mine_storage_left"
        android:layout_marginRight="@dimen/mine_storage_left" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mine_edittext_top"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="SSID  :    "
                android:textColor="@color/sgray"
                android:textSize="@dimen/wxb_fontsize_18" />

            <EditText
                android:id="@+id/et_ssid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="Wifi_tom"
                android:maxLength="32"
                android:editable="false"
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:textColor="@color/gray_ss"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/wxb_fontsize_18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mine_edittext_top"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="个性标语"
                android:textColor="@color/sgray"
                android:textSize="@dimen/wxb_fontsize_18" />

            <EditText
                android:id="@+id/et_welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="欢迎标语最多12个字"
                android:maxLength="12"
                android:textColor="@color/gray_ss"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/wxb_fontsize_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_guest_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="13dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_guest_confirm"
                android:layout_width="@dimen/mine_imageview_status"
                android:layout_height="@dimen/mine_imageview_status"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/select_n" />

            <TextView
                android:id="@+id/tv_guest_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="访客接入确认"
                android:textColor="@color/sgray"
                android:textSize="@dimen/wxb_fontsize_18" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sharing_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="13dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_sharing_network"
                android:layout_width="@dimen/mine_imageview_status"
                android:layout_height="@dimen/mine_imageview_status"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/select_n" />

            <TextView
                android:id="@+id/tv_sharing_network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="访客共享上网"
                android:textColor="@color/sgray"
                android:textSize="@dimen/wxb_fontsize_18" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_set_sharing"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mine_textview_confirm_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/mine_setsharing_top"
            android:background="@drawable/selector_btn_click"
            android:gravity="center"
            android:text="共     享"
            android:textColor="#ffffff"
            android:textSize="@dimen/wxb_fontsize_18" />
    </LinearLayout>

</LinearLayout>