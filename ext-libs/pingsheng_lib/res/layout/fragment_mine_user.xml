<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="@dimen/mine_user_marginleft"
        android:layout_marginTop="@dimen/mine_user_margintop"
        android:textSize="17sp"
        android:text="用户:" /> -->

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mine_storage_left"
        android:layout_marginRight="@dimen/mine_storage_left"
        android:layout_marginTop="@dimen/mine_user_margintop"
        android:hint="用户名/邮箱/手机号"
        android:maxLength="30"
        android:drawableLeft="@drawable/selector_btn_user"
        android:singleLine="true" />

    <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="@dimen/mine_user_marginleft"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:text="密码:" /> -->

    <EditText
        android:id="@+id/et_userpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mine_storage_left"
        android:layout_marginRight="@dimen/mine_storage_left"
        android:hint="6~12位字符"
        android:maxLength="12"
        android:layout_marginTop="@dimen/mine_user_margintop"
        android:drawableLeft="@drawable/selector_login_password_icon"
        android:password="true"
        android:singleLine="true" />

    <RelativeLayout
        android:id="@+id/rl_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mine_storage_left"
            android:padding="5dp"
            android:text="忘记密码?"
            android:textColor="@color/sgray"
            android:textSize="17sp" />
    </RelativeLayout>

    <!-- <TextView
        android:id="@+id/tv_confirmpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="@dimen/mine_user_marginleft"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:text="确认密码:" /> -->

    <EditText
        android:id="@+id/et_confirmpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mine_storage_left"
        android:layout_marginRight="@dimen/mine_storage_left"
        android:hint="确认密码"
        android:maxLength="12"
        android:layout_marginTop="@dimen/mine_user_margintop"
        android:drawableLeft="@drawable/selector_login_password_icon"
        android:password="true"
        android:singleLine="true" />

    <TextView
        android:id="@+id/user_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_textview_confirm_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/mine_textview_height"
        android:layout_marginLeft="@dimen/mine_storage_left"
        android:layout_marginRight="@dimen/mine_storage_left"
        android:background="@drawable/selector_btn_click"
        android:gravity="center"
        android:text="登   录"
        android:textColor="#ffffff"
        android:textSize="17sp" />
    

</LinearLayout>
