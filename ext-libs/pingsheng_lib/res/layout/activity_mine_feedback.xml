<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/application_background"
    android:orientation="vertical" >

    <include layout="@layout/actionbar_base" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mine_storage_left"
            android:layout_marginRight="@dimen/mine_storage_left"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mine_edittext_top"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="请选择反馈内容:"
                    android:textColor="@color/sgray"
                    android:textSize="@dimen/wxb_fontsize_18" />

                <LinearLayout
                    android:id="@+id/ll_suggest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_suggest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/checked" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="意见"
                        android:textColor="@color/sgray"
                        android:textSize="@dimen/wxb_fontsize_18" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_bug"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_bug"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/nochecked" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="BUG"
                        android:textColor="@color/sgray"
                        android:textSize="@dimen/wxb_fontsize_18" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mine_edittext_top"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_up"
                    android:layout_width="@dimen/mine_textview_width"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:text="反馈内容"
                    android:textColor="@color/sgray"
                    android:textSize="@dimen/wxb_fontsize_18" />

                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|left"
                    android:hint="请输入反馈,我们将不断改进"
                    android:maxLength="250"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/wxb_fontsize_16" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="250/250"
                android:textColor="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mine_edittext_top"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/mine_textview_width"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:text="电话号码"
                    android:textColor="@color/sgray"
                    android:textSize="@dimen/wxb_fontsize_18" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="(选填)以便我们给您回复"
                    android:inputType="phone"
                    android:maxLength="20"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/wxb_fontsize_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mine_edittext_top"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/mine_textview_width"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:text="E-Mail"
                    android:textColor="@color/sgray"
                    android:textSize="@dimen/wxb_fontsize_18" />

                <EditText
                    android:id="@+id/et_emile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="(选填)以便我们给您回复"
                    android:inputType="textEmailAddress"
                    android:maxLength="28"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/wxb_fontsize_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mine_edittext_top"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/mine_textview_width"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:text="QQ 号码 "
                    android:textColor="@color/sgray"
                    android:textSize="@dimen/wxb_fontsize_18" />

                <EditText
                    android:id="@+id/et_qq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="(选填)以便我们给您回复"
                    android:inputType="number"
                    android:maxLength="12"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/wxb_fontsize_16" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_textview_confirm_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/mine_status_top"
                android:background="@drawable/selector_btn_click"
                android:gravity="center"
                android:text="提     交"
                android:textColor="#ffffff"
                android:textSize="@dimen/wxb_fontsize_18" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>